{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "allowJs": true,
    "paths": {
      "@root/*": [ "./*" ],
      "@src/*": [ "src/*" ],
      "@test/*": [ "test/*" ]
    }
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "./src/command-line/templates/"
  ]
}
